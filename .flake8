# .flake8

[flake8]
max-line-length = 88
exclude =
    .git,
    __pycache__,
    data/,
    mlflow/,
    sandbox/,
    airflow/logs/,
    venv/,
    venvforecast/,
    .venv/
# E203 : whitespace before ':', compatible avec Black
# W503 : line break before binary operator
ignore = E203, W503

max-complexity = 10
show-source = true
statistics = true
